<!-- views/social.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <h2>{{>header}}</h2>

    <h2>HBS {{title}} page content</h2>
    <h2>Follow us on Social Media:</h2>
    <ul class="social-links">
        <li><a href="{{facebook}}" target="_blank" class="facebook">Facebook</a></li>
        <li><a href="{{twitter}}" target="_blank" class="twitter">Twitter</a></li>
        <li><a href="{{instagram}}" target="_blank" class="instagram">Instagram</a></li>
        <li><a href="{{linkedin}}" target="_blank" class="linkedin">LinkedIn</a></li>
    </ul>
    {{> footer}}
</body>

</html>
